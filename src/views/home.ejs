</head>

<body>

  <div class="gradient-wrapper">
    <%- include("./partials/nav.ejs") %>

    <div class="hero-section">
      <div class="left">
        <div class="heading">Search for any game Lorem ipsum dolor sit amet.</div>
        <div class="desc">
          Lorem ipsum dolor sit amet consectetur, adipisicing elit. Nulla culpa sequi nam officiis quod
          reiciendis.
        </div>
        <form id="search">

          <div class="input-wrapper">
            <input type="text" placeholder="Search teams, players, games">

            <svg class="search-icon" id="search-icon" xmlns="http://www.w3.org/2000/svg" height="48"
              viewBox="0 96 960 960" width="48">
              <path
                d="M796 935 533 672q-30 26-69.959 40.5T378 727q-108.162 0-183.081-75Q120 577 120 471t75-181q75-75 181.5-75t181 75Q632 365 632 471.15 632 514 618 554q-14 40-42 75l264 262-44 44ZM377 667q81.25 0 138.125-57.5T572 471q0-81-56.875-138.5T377 275q-82.083 0-139.542 57.5Q180 390 180 471t57.458 138.5Q294.917 667 377 667Z" />
            </svg>

          </div>
        </form>
      </div>

      <div class="right">
        <img src="/assets/curry.png" class="hero-img" alt="steph curry" id="img1">
        <img src="/assets/harden.png" class="hero-img" alt="james harden" id="img2">
      </div>
    </div>
  </div>

</body>

</html>

<script>

  const form = document.querySelector("#search");
  const input = form.querySelector("input");
  const search = form.querySelector("#search-icon");
  search.addEventListener("click", (event) => {
    if (input.value != "") {
      document.location.pathname = `/search/${input.value}`
    }
  });
  form.addEventListener("submit", async (event) => {
    event.preventDefault();
    if (input.value != "") {
      document.location.pathname = `/search/${input.value}`
    }

  });

</script>
